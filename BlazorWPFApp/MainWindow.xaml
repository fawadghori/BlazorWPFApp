<Window x:Class="BlazorWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
        xmlns:local="clr-namespace:BlazorWPFApp"
        Title="Blazor Hybrid WPF App" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Services will be added programmatically -->
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <blazor:BlazorWebView x:Name="blazorWebView" HostPage="wwwroot\index.html">
            <blazor:BlazorWebView.RootComponents>
                <blazor:RootComponent Selector="#app" ComponentType="{x:Type local:Main}" />
            </blazor:BlazorWebView.RootComponents>
        </blazor:BlazorWebView>
    </Grid>
</Window>